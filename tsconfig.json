{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "compilerOptions": {
        "outDir": "dist",
        "lib": ["ES2022"],
        "module": "commonjs",
        "target": "ES2017",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext"
    }
}
